FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      cylindrical(U);
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            flowRateInletVelocity;
        massFlowRate    
        {
            type            constant;
            value           1;
        }
        value           uniform (-8 0 0);
    }
    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (8 0 0);
    }
    walls
    {
        type            noSlip;
    }
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
