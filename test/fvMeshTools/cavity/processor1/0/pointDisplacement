FoamFile
{
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    zeroSizedPatch
    {
        type            noSlip;
    }
    movingWall
    {
        type            noSlip;
    }
    fixedWalls
    {
        type            noSlip;
    }
    frontAndBack
    {
        type            empty;
    }
    procBoundary1to0
    {
        type            processor;
    }
    procBoundary1to2
    {
        type            processor;
    }
}


