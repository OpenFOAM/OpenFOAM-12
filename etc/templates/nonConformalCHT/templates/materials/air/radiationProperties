FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      radiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

radiationModel  none; // P1, fvDOM;

solverFreq 10;

absorptionEmissionModel constant;

constantCoeffs
{
    absorptivity    absorptivity    [0 -1 0 0 0 0 0] 0.5;
    emissivity      emissivity      [0 -1 0 0 0 0 0] 0.5;
    E               E               [1 -1 -3 0 0 0 0] 0;
}

fvDOMCoeffs
{
    nPhi        3;
    nTheta      3;
    tolerance   1e-3;
    maxIter     10;
}

scatterModel    none;

sootModel       none;

